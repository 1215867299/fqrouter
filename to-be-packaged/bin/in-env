#!/bin/bash

# initialize environment variables
if [ -z `readlink $0` ] ; then
    BIN_DIR=$(cd `dirname $0` && pwd)
else
    BIN_DIR=$(dirname $(readlink $0))
fi
if [ -z "$FQROUTER_HOME" ] ; then
    export FQROUTER_HOME=`dirname $BIN_DIR`
fi

# add path
export PATH=$PATH:$FQROUTER_HOME/bin

# execute command within virtualenv
. $FQROUTER_HOME/env/bin/activate && $@