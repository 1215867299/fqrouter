<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_wifi_hotspot_category" android:key="WifiHotspot">
        <EditTextPreference
                android:key="WifiHotspotSSID"
                android:title="@string/pref_wifi_hotspot_ssid"
                android:summary="@string/pref_wifi_hotspot_ssid_summary"
                android:defaultValue="fqrouter"/>
        <EditTextPreference
                android:key="WifiHotspotPassword"
                android:title="@string/pref_wifi_hotspot_password"
                android:defaultValue="12345678"/>

    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_goagent_category">
        <CheckBoxPreference
                android:key="GoAgentPublicServersEnabled"
                android:title="@string/pref_goagent_public_servers"
                android:summary="@string/pref_goagent_public_servers_summary"
                android:defaultValue="true"/>
        <ListPreference
                android:key="GoAgentPrivateServersPicker"
                android:title="@string/pref_goagent_private_servers"
                android:defaultValue=""/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_shadowsocks_category">
        <CheckBoxPreference
                android:key="ShadowsocksPublicServersEnabled"
                android:title="@string/pref_shadowsocks_public_servers"
                android:summary="@string/pref_shadowsocks_public_servers_summary"
                android:defaultValue="true"/>
        <ListPreference
                android:key="ShadowsocksPrivateServersPicker"
                android:title="@string/pref_shadowsocks_private_servers"
                android:defaultValue=""/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_http_proxy_category">
        <CheckBoxPreference
                android:key="HttpProxyPublicServersEnabled"
                android:title="@string/pref_http_proxy_public_servers"
                android:summary="@string/pref_http_proxy_public_servers_summary"
                android:defaultValue="true"/>
        <ListPreference
                android:key="HttpProxyPrivateServersPicker"
                android:title="@string/pref_http_proxy_private_servers"
                android:defaultValue=""/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_ssh_category">
        <ListPreference
                android:key="SshPrivateServersPicker"
                android:title="@string/pref_ssh_public_servers"
                android:defaultValue=""/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_bypass_category" android:key="Bypass">
        <CheckBoxPreference
                android:key="YoutubeScramblerEnabled"
                android:title="@string/pref_bypass_youtube_scrambler"
                android:summary="@string/pref_bypass_youtube_scrambler_summary"
                android:defaultValue="true"/>
        <CheckBoxPreference
                android:key="TcpScramblerEnabled"
                android:title="@string/pref_tcp_scrambler"
                android:summary="@string/pref_tcp_scrambler_summary"
                android:defaultValue="true"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_shortcut_category">
        <CheckBoxPreference
                android:key="ChinaShortcutEnabled"
                android:title="@string/pref_shortcut_china_shortcut"
                android:summary="@string/pref_shortcut_china_shortcut_summary"
                android:defaultValue="true"/>
        <CheckBoxPreference
                android:key="DirectAccessEnabled"
                android:title="@string/pref_shortcut_direct_access"
                android:summary="@string/pref_shortcut_direct_access_summary"
                android:defaultValue="true"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_general_category">
        <CheckBoxPreference
                android:key="NotificationEnabled"
                android:title="@string/pref_general_notification_enabled"
                android:defaultValue="true"/>
        <CheckBoxPreference
                android:key="AutoAccessCheckEnabled"
                android:title="@string/pref_general_auto_access_check"
                android:summary="@string/pref_general_auto_access_check_summary"
                android:defaultValue="true"/>
        <CheckBoxPreference
                android:key="AutoUpdateEnabled"
                android:title="@string/pref_general_auto_update"
                android:summary="@string/pref_general_auto_update_summary"
                android:defaultValue="true"/>
    </PreferenceCategory>
</PreferenceScreen>